<mujoco>
  <visual>
    <global offwidth="1920" offheight="1080" fovy="60" />
    <scale framelength="0.5" framewidth="0.05" />
  </visual>
  <asset>
    <texture type="skybox" builtin="gradient" rgb1="1 1 1" rgb2=".6 .8 1" width="256" height="256"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>

  <worldbody>
    <light pos="1.5 1.5 5.0" diffuse="2 1.9 1.9"/>
    <light pos="-1.5 -1.5 5.0" diffuse="2 1.9 1.9"/>

    <geom name="floor" pos="0 0 -0.05" size="0 0 0.05" type="plane" material="groundplane"/>
    
    <body name="obs" pos="0 0 0.1">
      <geom type="box" pos="0 2 0" size="1.9 0.1 0.1" rgba="0.2 0.2 0.2 1"/>
      <geom type="box" pos="0 -2 0" size="1.9 0.1 0.1" rgba="0.2 0.2 0.2 1"/>
      <geom type="box" pos="2 0 0" size="0.1 1.9 0.1" rgba="0.2 0.2 0.2 1"/>
      <geom type="box" pos="-2 0 0" size="0.1 1.9 0.1" rgba="0.2 0.2 0.2 1"/>

      <geom type="box" pos="0 0.0 0" size="0.5 0.5 0.1" rgba="0.2 0.2 0.2 1"/>
    </body>

    <body name="a1" pos="0 0 0.1">
      <!-- xy translation + yaw -->
      <joint name="a1_x" type="slide" axis="1 0 0" range="-2 2"/>
      <joint name="a1_y" type="slide" axis="0 1 0" range="-2 2"/>
      <joint name="a1_yaw" type="hinge" axis="0 0 1" range="-180 180"/>
      <!-- cylinder geometry -->
      <geom type="box" size="0.05 0.25 0.1" rgba="0.8 0.2 0.2 1"/>
    </body>

    <body name="a2" pos="0.0 0.0 0.1">
      <joint name="a2_x" type="slide" axis="1 0 0" range="-2 2"/>
      <joint name="a2_y" type="slide" axis="0 1 0" range="-2 2"/>
      <joint name="a2_yaw" type="hinge" axis="0 0 1" range="-180 180"/>

      <geom type="cylinder" size="0.15 0.05" rgba="0.2 0.2 0.8 1"/>
    </body>

    <body name="obj1" pos="1 1 0.1">
      <freejoint/>
      <geom size="0.2 0.2 0.1" type="box"/>
    </body>

  </worldbody>

</mujoco>
